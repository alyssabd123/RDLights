{
    "version": 2,
    "projects": {
      "frontend": {
        "root": "./frontend",
        "builds": [
          { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
        ],
        "routes": [
          { "src": "/(.*)", "dest": "/index.html" }
        ]
      },
      "backend": {
        "root": "./backend",
        "builds": [
          { "src": "server.js", "use": "@vercel/node" }
        ],
        "routes": [
          { "src": "/api/(.*)", "dest": "/server.js" }
        ]
      }
    }
  }
  